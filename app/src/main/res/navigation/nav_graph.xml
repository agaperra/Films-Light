<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/fragment_movie">

    <fragment
        android:id="@+id/fragment_movie"
        android:name="com.agaperra.filmslight.ui.fragments.MovieFragment"
        android:label="@string/title_movie"
        tools:layout="@layout/fragment_movie">
        <action
            android:id="@+id/openMovie"
            app:destination="@id/infoFragment"
            app:enterAnim="@anim/slide_from_bottom"
            app:exitAnim="@anim/fragment_exit" />
        <action
            android:id="@+id/openSearch"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/slide_from_bottom"
            app:exitAnim="@anim/fragment_exit" />
    </fragment>

    <fragment
        android:id="@+id/infoFragment"
        android:name="com.agaperra.filmslight.ui.fragments.DetailsFragment"
        android:label="InfoFragment"
        tools:layout="@layout/fragment_info">
        <argument
            android:name="movieId"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.agaperra.filmslight.ui.fragments.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/openMovie"
            app:destination="@id/infoFragment"
            app:enterAnim="@anim/slide_from_bottom"
            app:exitAnim="@anim/fragment_exit" />

    </fragment>

</navigation>